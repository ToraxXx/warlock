<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/warlockstyles.css" />
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/warlock_start_selection.js" />
	</scripts>
	<Panel class="SelectionRoot">
		<Panel id="PlayerList">
			<Panel id="PlayerListHeader">
				<Label id="PlayerListHeaderName" text="Player Name" />
				<Label id="PlayerListHeaderTeam" text="Team" />
			</Panel>
		</Panel>
		<Panel id="ModeSelection">
			<Label text="Modes" id="ModesLabel" />

			<Panel class="FlowRight">
				<Label id="TeamModeLabel" class="ModeItemLabel" text="Team Mode:" />
				<DropDown id="TeamModeDropDown" oninputsubmit="onTeamModeChanged()">
					<Label id="TeamModeTeams" text="Teams" />
					<Label id="TeamModeFFA" text="FFA" />
					<Label id="TeamModeShuffle" text="Shuffle" />
				</DropDown>
			</Panel>

			<Panel class="FlowRight">
				<Label id="ModeLabel" class="ModeItemLabel" text="Mode:" />
				<DropDown id="ModeDropDown" oninputsubmit="onModeChanged()">
					<Label id="ModeRounds" text="Rounds" />
				</DropDown>
			</Panel>

			<Panel class="FlowRight">
				<Label id="WinConditionLabel" class="ModeItemLabel" text="Win condition:" />
				<DropDown id="WinConditionDropDown" oninputsubmit="onWinConditionChanged()">
					<Label id="WinConditionScore" text="Score" />
					<Label id="WinConditionRounds" text="Rounds" />
				</DropDown>
			</Panel>
			
			<Panel class="FlowRight">
				<Label id="WinCondMaxLabel" class="ModeItemLabel" text="Max Score:" />
				<TextEntry id="WinCondMaxText" text="11" />
			</Panel>

            <Panel class="FlowRight">
              <Label class="ModeItemLabel" text="Start Gold:" />
              <TextEntry id="StartGoldText" text="30" />
            </Panel>
          
          
			<Button id="StartButton" class="ButtonBevel" onactivate="onStartGame()">
				<Label text="Start" />
			</Button>
		</Panel>
	</Panel>
</root>